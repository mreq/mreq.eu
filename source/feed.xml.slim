doctype xml
rss version='2.0' xmlns:atom="http://www.w3.org/2005/Atom"
  channel
    atom:link rel='self' type='application/rss+xml' href='http://www.mreq.eu/feed.xml'
    title         = "www.mreq.eu"
    link          = "http://www.mreq.eu/"
    description   = meta_description
    language      = "en-US"
    lastBuildDate = blog.articles.first.date.strftime("%a, %d %b %Y %H:%M:%S %z")
    webMaster     = "contact@petrmarek.eu"
    - blog.articles.each do |article|
      item
        title       = article.title
        description = article.summary
        pubDate     = article.date.strftime("%a, %d %b %Y %H:%M:%S %z")
        link        = "http://www.mreq.eu#{ article.url }"
